<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Country</th>
      <th>Magazines</th>
      <% if current_user.admin %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.country %></td>
        <td>
          <ul>
            <% oenologist.oenologist_magazines.each do |oe| %>
              <li><%= oe.magazine.name %></li>
              <ul>
                <li>Editor:<%= oe.editor %></li>
                <li>Escritor:<%= oe.writer %></li>
                <li>Critico:<%= oe.reviewer %></li>
              </ul>
            <% end %>

          </ul>
        </td>
        <% if current_user.admin %>
          <td><%= link_to 'Show', oenologist %></td>
          <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
          <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

